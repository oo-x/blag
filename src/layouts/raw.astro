---
type Props = { title?: string }
const { title = 'Blag' } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<link rel="icon" href="data:null" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<!-- prettier-ignore -->
		<style>body,html{color:#ccc;background-color:#111;}</style>
	</head>
	<body>
		<slot />
	</body>
</html>
