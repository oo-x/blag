---
import ThemeIcon from '@/components/ThemeIcon.astro'
const links = [
	{
		href: '/notes/1',
		text: 'Notes',
	},
]
---

<nav
	class="relative border-b border-border bg-secondary/20 p-4"
	aria-label="Primary navigation"
>
	<div class="mx-auto flex max-w-6xl items-center justify-between gap-4">
		<div class="flex items-center gap-2">
			<a
				href="/"
				class="px-2 font-mono text-lg font-semibold transition-colors hover:text-primary"
				>home</a
			>
			<div class="hidden gap-1 sm:flex">
				{
					links.map(({ text, ...ln }) => {
						return (
							<a
								class="rounded-md px-3 py-2 text-sm transition-colors hover:bg-secondary/50"
								{...ln}
							>
								{text}
							</a>
						)
					})
				}
			</div>
		</div>
		<div class="flex flex-1 items-center justify-center px-2">
			<div class="w-full max-w-xs">
				<input
					type="search"
					placeholder="Search notes..."
					class="w-full rounded-lg border border-secondary bg-secondary/40 px-4 py-2 text-sm text-foreground placeholder:text-secondary transition-all duration-200 hover:bg-secondary/60 focus:border-primary focus:bg-secondary/50 focus:outline-none focus:ring-2 focus:ring-primary/20"
					id="search-input"
				/>
			</div>
		</div>
		<ThemeIcon />
	</div>
</nav>

